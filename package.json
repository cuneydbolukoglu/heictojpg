{
  "name": "heictojpg",
  "version": "0.1.1",
  "description": "HEIC to JPG Converter",
  "author": "Cüneyd Bölükoğlu",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"sleep 5 && npm run electron\"",
    "dev:next": "next dev",
    "build": "next build && next export",
    "electron": "electron electron/main.js",
    "electron-dev": "electron electron/main.js",
    "build-electron": "npm run build && npm run electron",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:dmg": "npm run build && electron-builder --mac dmg",
    "dist:dir": "npm run build && electron-builder --dir",
    "pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "antd": "^5.28.0",
    "chokidar": "^4.0.3",
    "heic2any": "^0.0.4",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.6",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.cuneyd.heictojpg",
    "productName": "HEIC to JPG Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "electron/assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "dmg": {
      "background": "electron/assets/dmg-background.png",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "compression": "maximum",
    "forceCodeSigning": false
  }
}